@page "/login"
@inject AuthService AuthService
@inject NavigationManager Navigation

<h3>Đăng nhập</h3>

<EditForm Model="loginModel" OnValidSubmit="HandleLogin">
    <InputText @bind-Value="loginModel.Email" placeholder="Email" />
    <InputText @bind-Value="loginModel.Password" placeholder="Mật khẩu" type="password" />
    <button type="submit">Đăng nhập</button>
</EditForm>

@if (!string.IsNullOrEmpty(message))
{
    <p>@message</p>
}

@code {
    LoginModel loginModel = new();
    string message = "";

    async Task HandleLogin()
    {
        var token = await AuthService.LoginAsync(loginModel);
        if (token != null)
        {
            message = "Đăng nhập thành công!";
            // Lưu token vào local storage nếu muốn
            Navigation.NavigateTo("/");
        }
        else
        {
            message = "Đăng nhập thất bại!";
        }
    }
}
